server {
    listen ${APP_PORT};
    server_name _;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /static/ {
        expires 30d;
        add_header Cache-Control "public";
    }

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;
}